rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /blog-images/{imageId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /blog-content-images/{imageId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /featured-images/{imageId} {
      allow read;
      allow write: if request.auth != null;
    }
  }
} 